# GLWM SDK Configuration
# Copy this file to .env and fill in your values

# ===========================================
# RPC Provider Configuration
# ===========================================

# RPC provider type: alchemy, infura, or custom
GLWM_RPC_PROVIDER=alchemy

# API key for Alchemy or Infura
GLWM_RPC_API_KEY=your-api-key-here

# Custom RPC URL (required if GLWM_RPC_PROVIDER=custom)
# GLWM_RPC_CUSTOM_URL=https://your-rpc-endpoint.com

# Fallback RPC URLs (comma-separated)
# GLWM_RPC_FALLBACK_URLS=https://fallback1.com,https://fallback2.com

# ===========================================
# Contract Configuration
# ===========================================

# License NFT contract address
GLWM_LICENSE_CONTRACT=0x0000000000000000000000000000000000000000

# Chain ID (e.g., 1 for Ethereum mainnet, 137 for Polygon)
GLWM_CHAIN_ID=137

# ===========================================
# Minting Portal Configuration
# ===========================================

# Minting portal URL
GLWM_MINTING_PORTAL_URL=https://mint.yourgame.com

# Portal mode: webview, iframe, or redirect
GLWM_MINTING_PORTAL_MODE=webview

# ===========================================
# Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARN, ERROR, NONE
GLWM_LOG_LEVEL=INFO

# ===========================================
# Error Reporting (Sentry)
# ===========================================

# Sentry DSN for error tracking
# GLWM_SENTRY_DSN=https://key@sentry.io/project

# Environment name
GLWM_ENVIRONMENT=development

# Release version
GLWM_RELEASE=0.1.0

# ===========================================
# Cache Configuration
# ===========================================

# Enable verification caching
GLWM_CACHE_ENABLED=true

# Cache TTL in seconds
GLWM_CACHE_TTL=300
